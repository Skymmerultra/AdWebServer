<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ad.web.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.ad.web.entity.User">
            <id property="id" column="id" />
            <result property="phone" column="phone" />
            <result property="password" column="password" />
            <result property="avatarUrl" column="avatar_url" />
            <result property="username" column="username" />
            <result property="balance" column="balance" />
            <result property="status" column="status" />
            <result property="address" column="address" />
            <result property="sex" column="sex" />
            <result property="email" column="email" />
            <result property="createTime" column="create_time" />
            <result property="updateTime" column="update_time" />
            <result property="isDeleted" column="is_deleted" />
    </resultMap>

    <sql id="Base_Column_List">
        id,phone,password,avatar_url,username,balance,
        status,address,sex,email,create_time,
        update_time,is_deleted
    </sql>

    <select id="getUserByName" resultType="com.ad.web.entity.User">
        select <include refid="Base_Column_List"/>
            from user_info
            where username = #{username} and is_deleted = 0
    </select>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from user_info
        where  id = #{id} and is_deleted = 0
    </select>
    <select id="getBalanceById" resultType="java.lang.Integer">
        select balance
        from user_info
        where id = #{userId} and is_deleted = 0
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from user_info
        where  id = #{id} 
    </delete>
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.ad.web.entity.User" useGeneratedKeys="true">
        insert into user_info
        ( id,phone,password,avatar_url,username,balance,
        status,address,sex,email,create_time,
        update_time,is_deleted)
        values (#{id},#{phone},#{password},#{avatarUrl},#{username},#{balance},
        #{status},#{address},#{sex},#{email},#{createTime},
        #{updateTime},#{isDeleted})
    </insert>
    <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="com.ad.web.entity.User" useGeneratedKeys="true">
        insert into user_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="phone != null">phone,</if>
                <if test="password != null">password,</if>
                <if test="avatarUrl != null">avatar_url,</if>
                <if test="username != null">username,</if>
                <if test="balance != null">balance,</if>
                <if test="status != null">status,</if>
                <if test="address != null">address,</if>
                <if test="sex != null">sex,</if>
                <if test="email != null">email,</if>
                <if test="createTime != null">create_time,</if>
                <if test="updateTime != null">update_time,</if>
                <if test="isDeleted != null">is_deleted,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="phone != null">#{phone},</if>
                <if test="password != null">#{password},</if>
                <if test="avatarUrl != null">#{avatarUrl},</if>
                <if test="username != null">#{username},</if>
                <if test="balance != null">#{balance},</if>
                <if test="status != null">#{status},</if>
                <if test="address != null">#{address},</if>
                <if test="sex != null">#{sex},</if>
                <if test="email != null">#{email},</if>
                <if test="createTime != null">#{createTime},</if>
                <if test="updateTime != null">#{updateTime},</if>
                <if test="isDeleted != null">#{isDeleted},</if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.ad.web.entity.User">
        update user_info
        <set>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="avatarUrl != null and avatarUrl != ''">
                avatar_url = #{avatarUrl},
            </if>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="balance != null">
                balance = #{balance},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="isDeleted != null">
                is_deleted = #{isDeleted},
            </if>
        </set>
        where   id = #{id}
    </update>
    <update id="updateByPrimaryKey" parameterType="com.ad.web.entity.User">
        update user_info
        set 
            phone =  #{phone},
            password =  #{password},
            avatar_url =  #{avatarUrl},
            username =  #{username},
            balance =  #{balance},
            status =  #{status},
            address =  #{address},
            sex =  #{sex},
            email =  #{email},
            create_time =  #{createTime},
            update_time =  #{updateTime},
            is_deleted =  #{isDeleted}
        where   id = #{id} 
    </update>
    <update id="recharge">
        update user_info
        set
            balance = balance + #{rechargeNum},
            update_time = Now()
        where id = #{id} and is_deleted = 0
    </update>
</mapper>
